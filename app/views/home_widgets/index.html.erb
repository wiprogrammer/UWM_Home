<p id="notice"><%= notice %></p>

<h1>Home Widgets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Color</th>
      <th>Default visibility</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @home_widgets.each do |home_widget| %>
      <tr>
        <td><%= home_widget.name %></td>
        <td><%= home_widget.description %></td>
        <td><%= home_widget.color %></td>
        <td><%= home_widget.default_visibility %></td>
        <td><%= home_widget.link %></td>
        <td><%= link_to 'Show', home_widget %></td>
        <td><%= link_to 'Edit', edit_home_widget_path(home_widget) %></td>
        <td><%= link_to 'Destroy', home_widget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Home Widget', new_home_widget_path %>
